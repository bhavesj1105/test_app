				"cwd": "${workspaceFolder}/bakbak-mobile"
			},
			"problemMatcher": []
		},
		{
			"label": "Expo: iOS",
			"type": "shell",
			"command": "npx expo start --ios",
			"options": {
				"cwd": "${workspaceFolder}/bakbak-mobile"
			},
			"problemMatcher": []
		},
		{
			"label": "Expo: Web",
			"type": "shell",
			"command": "npx expo start --web",
			"options": {
				"cwd": "${workspaceFolder}/bakbak-mobile"
			},
			"problemMatcher": []
